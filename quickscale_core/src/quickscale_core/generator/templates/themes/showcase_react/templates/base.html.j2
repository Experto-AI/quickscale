{%raw%}{% load static %}<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block title %}{%endraw%}{{ project_name }}{%raw%}{% endblock %}</title>
    <link rel="icon" type="image/svg+xml" href="{% static 'frontend/favicon.svg' %}" />
    <style>
        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
                         'Helvetica Neue', Arial, sans-serif;
            line-height: 1.6;
            color: #0f172a;
            background: #f8fafc;
            min-height: 100vh;
        }
        a { color: #2563eb; text-decoration: none; }
        a:hover { text-decoration: underline; }
        .qs-topbar {
            background: #fff;
            border-bottom: 1px solid #e2e8f0;
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .qs-topbar-brand {
            font-weight: 600;
            font-size: 1.125rem;
            color: #0f172a;
        }
        .qs-topbar-nav a {
            margin-left: 1rem;
            font-size: 0.875rem;
            color: #64748b;
        }
        .qs-topbar-nav a:hover { color: #0f172a; }
        .qs-main { max-width: 1024px; margin: 0 auto; padding: 2rem 1.5rem; }
        .qs-messages { margin-bottom: 1.5rem; }
        .qs-alert {
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
        }
        .qs-alert-success { background: #f0fdf4; color: #166534; border: 1px solid #bbf7d0; }
        .qs-alert-error, .qs-alert-danger { background: #fef2f2; color: #991b1b; border: 1px solid #fecaca; }
        .qs-alert-warning { background: #fffbeb; color: #92400e; border: 1px solid #fde68a; }
        .qs-alert-info { background: #eff6ff; color: #1e40af; border: 1px solid #bfdbfe; }
        .qs-footer {
            text-align: center;
            padding: 1.5rem;
            color: #94a3b8;
            font-size: 0.8rem;
            border-top: 1px solid #e2e8f0;
            margin-top: 3rem;
        }
    </style>
    {% block extra_css %}{% endblock %}
</head>
<body>
    <nav class="qs-topbar">
        <a href="/" class="qs-topbar-brand">{%endraw%}{{ project_name }}{%raw%}</a>
        <div class="qs-topbar-nav">
            <a href="/">‚Üê Back to App</a>
        </div>
    </nav>

    <main class="qs-main">
        {% if messages %}
        <div class="qs-messages">
            {% for message in messages %}
            <div class="qs-alert qs-alert-{{ message.tags }}">{{ message }}</div>
            {% endfor %}
        </div>
        {% endif %}

        {% block content %}{% endblock %}
    </main>

    <footer class="qs-footer">
        &copy; {% now "Y" %} {%endraw%}{{ project_name }}{%raw%}. Built with QuickScale.
    </footer>

    {% block extra_js %}{% endblock %}
</body>
</html>{%endraw%}
